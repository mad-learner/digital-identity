<div class="container">
    <div id="profile-container">

        <div class="control-group clearfix">
            <div class="left" id="icon"></div>
            <div class="left" id="display-name-container">
                <input type="text" placeholder="Display Name" class="form-control" id="name" name="name" />
            </div>
            <div class="clear"></div>
        </div>

        <div class="control-group">
            <a id="public-key-toggle" href="javascript:;">Show public key...</a>
            <h4 class="private-key" id="user-public-key" style="display:none;"></h4>
        </div>

        <div class="control-group">
            <label class="control-label">Email Address</label>
            <input type="text" class="form-control" name="email" />
        </div>

        <div class="control-group">
            <label class="control-label">City</label>
            <input type="text" class="form-control" name="city" />
        </div>

        <div class="control-group">
            <label class="control-label">Country</label>
            <input type="text" class="form-control" name="country" />
        </div>

        <div class="control-group">
            <button id="create-button" class="btn btn-lg btn-success">Save</button>
        </div>

    </div>

    <div id="accounts-container">

        <div class="control-group" id="ethereum-account-container">
            <div id="ethereum-account-label-container" class="clearfix">
                <img class="left" src="/assets/ethereum_logo.png" id="ethereum-account" />
                <h3 id="ethereum-account-label" class="left">Ethereum Account</h3>
                <div class="clear"></div>
            </div>
            <div>
                <label class="control-label">Address</label>
                <h4 class="address" id="user-address">0x...</h4>
                <a id="private-key-toggle" href="javascript:;">Show private key...</a><h4 class="private-key" id="user-private-key" style="display:none;"></h4>
            </div>
        </div>

    </div>
</div>